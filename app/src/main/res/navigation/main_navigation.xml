<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.shoppi.app.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_product_detail"
            app:destination="@id/navigation_product_detail" />
    </fragment>
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.shoppi.app.cart.CartFragment"
        android:label="CartFragment" />
    <fragment
        android:id="@+id/navigation_category"
        android:name="com.shoppi.app.category.CategoryFragment"
        android:label="CategoryFragment" />
    <fragment
        android:id="@+id/navigation_product_detail"
        android:name="com.shoppi.app.home.ProductDetailFragment"
        android:label="ProductDetailFragment" />
</navigation>